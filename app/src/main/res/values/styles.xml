<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisbuttonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/texto</item>
    </style>

    <style name="Editexwhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/texto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/texto</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/texto</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/texto</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/texto</item>
    </style>

    <style name="EditexBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/black</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/black</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
